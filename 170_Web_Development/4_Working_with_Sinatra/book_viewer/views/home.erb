<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% number = 1 %>
    <% @contents.each do |chapter| %>
      <li class="pure-menu-item">
        <a href="/chapters/<%= number %>" class="pure-menu-link"><%= chapter %></a>
      </li>
      <% number += 1 %>
    <% end %>
  </ul>
</div>